{
  "name": "server-monitor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon -e ts --exec ts-node -r tsconfig-paths/register bin/www.ts",
    "start:dev": "cross-env NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=1 npm run start",
    "start:test": "cross-env NODE_ENV=testing npm run start",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "compile:dev": "cross-env NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=1 node bin/www.js",
    "compile:test": "cross-env NODE_ENV=testing node bin/www.js",
    "compile:prod": "cross-env NODE_ENV=production node bin/www.js",
    "pm2start:dev": "cross-env NODE_ENV=development NODE_TLS_REJECT_UNAUTHORIZED=1 pm2 start bin/pm2/dev.config.js",
    "pm2start:test": "cross-env NODE_ENV=testing pm2 start bin/pm2/test.config.js",
    "pm2start:prod": "cross-env NODE_ENV=production pm2 start bin/pm2/prod.config.js",
    "build": "npm run rm && npm run lint && tsc && npm run copy",
    "lint": "eslint --ext .ts",
    "lint:fix": "eslint --ext .ts --fix",
    "copy": "ts-node script/copy.ts",
    "rm": "ts-node script/rm.ts",
    "test:local": "cross-env NODE_ENV=test_local PROJECT_STATUS=source jest --detectOpenHandles --watchAll --no-cache",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand --detectOpenHandles --passWithNoTests --colors --forceExit",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "cron": "^2.3.0",
    "date-fns": "^2.29.3",
    "debug": "^4.1.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^7.0.2",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "mongoose": "^7.0.3",
    "pug": "^2.0.3",
    "shelljs": "^0.8.5",
    "superagent": "^8.0.9",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/cron": "^2.0.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.194",
    "@types/shelljs": "^0.8.12",
    "@types/superagent": "^4.1.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "lint-staged": {
    "**/*.ts": "npm run lint"
  }
}
